<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="actionMenuTextColor">@color/colorDarkSkyBlue</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.NavigationButton</item>
        <item name="actionButtonStyle">@style/AppTheme.Toolbar.ActionButton</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.Toolbar.ActioButtonTextStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24_px</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGreyishBrown</item>
    </style>

    <style name="AppTheme.Toolbar.NavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme.Toolbar.ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingEnd">21dp</item>
    </style>

    <style name="AppTheme.Toolbar.ActioButtonTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextLabel" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorBrownishGrey</item>
        <item name="colorControlActivated">@color/colorDarkSkyBlue</item>
        <item name="android:textColorHint">@color/floating_label</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorDarkSkyBlue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginButton" parent="ThemeOverlay.AppCompat">
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_login_background</item>
    </style>

</resources>
